source "$WRAPPER_HOME"/../common/settings

readonly ANALYZER_DOCKER_IMAGE="qspprotocol/mythril-usolc@sha256:38d9d9692e04b0fd3ae418120e78cddfd37ea1a9cc2c70b5676f4d7c856cbc28"
