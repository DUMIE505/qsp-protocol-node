source "$WRAPPER_HOME"/../common/settings

readonly ANALYZER_DOCKER_IMAGE="qspprotocol/securify:node-latest"
readonly ANALYZER_SYS_PATH=$(docker run --entrypoint sh "$ANALYZER_DOCKER_IMAGE" -c 'echo "$PATH"') 
readonly ANALYZER_VERSION=$(echo "$ANALYZER_DOCKER_IMAGE" | egrep -o '[0-9A-Za-z]+$' | cut -d ':' -f2)
readonly ANALYZER_CMD="docker run --rm -e PATH=$(dirname ${QSP_CONTAINER_USOLC}):$ANALYZER_SYS_PATH -v $QSP_DOCKER_SOCKET:$QSP_DOCKER_SOCKET -v $QSP_HOST_USOLC:$QSP_CONTAINER_USOLC -v $TMP_FOLDER:$TMP_FOLDER -i $ANALYZER_DOCKER_IMAGE $ANALYZER_ARGS -fs $TMP_FOLDER/$CONTRACT_FILE_NAME"
