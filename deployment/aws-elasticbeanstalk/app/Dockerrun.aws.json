{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "node-config",
      "host": {
        "sourcePath": "/var/node-config"
      }
    },
    {
      "name": "geth-keystore",
      "host": {
        "sourcePath": "/var/geth-keystore"
      }
    },
    {
      "name": "audit-db",
      "host": {
        "sourcePath": "/var/audit-db-v0p8"
      }
    },
    {
      "name": "tmp",
      "host": {
        "sourcePath": "/tmp"
      }
    },
    {
      "name": "docker-sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "audit",
      "image": "{{image}}",
      "command": ["./qsp-protocol-node", "dev", "/app/node-config/config.yaml"],
      "essential": true,
      "memory": 2048,
      "mountPoints": [
        {
          "sourceVolume": "audit-db",
          "containerPath": "/app/audit-db"
        },
        {
          "sourceVolume": "node-config",
          "containerPath": "/app/node-config"
        },
        {
          "sourceVolume": "docker-sock",
          "containerPath": "/var/run/docker.sock"
        },
        {
          "sourceVolume": "tmp",
          "containerPath": "/tmp"
        },
        {
          "sourceVolume": "geth-keystore",
          "containerPath": "/app/keystore"
        }
      ]
    },
    {
      "name": "ping",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
