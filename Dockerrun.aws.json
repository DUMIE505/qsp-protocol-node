{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "qsp-network-geth",
      "host": {
        "sourcePath": "/var/qsp-network-geth"
      }
    },
    {
      "name": "qsp-network-keystore",
      "host": {
        "sourcePath": "/var/qsp-network-keystore"
      }
    },
    {
      "name": "qsp-network-geth-config",
      "host": {
        "sourcePath": "/var/qsp-network-geth-config"
      }
    },
    {
      "name": "audit-db",
      "host": {
        "sourcePath": "/var/audit-db-v5"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "audit",
      "image": "466368306539.dkr.ecr.us-east-1.amazonaws.com/qsp-network-audit:<tag>",
      "command": ["make", "run"],
      "essential": true,
      "memory": 2048,
      "links": [
        "geth-qsp"
      ],
      "mountPoints": [
        {
          "sourceVolume": "audit-db",
          "containerPath": "/analyzer/audit-db"
        }
      ]
    },
    {
      "name": "geth-qsp",
      "image": "466368306539.dkr.ecr.us-east-1.amazonaws.com/qsp-network-geth-qsp-fullnode:develop-legacy",
      "command": ["--config=qspdata/geth-config/audit-fullnode.toml", "--gasprice=0"],
      "essential": true,
      "memory": 2048,
      "portMappings": [
        {
          "hostPort": 30303,
          "containerPort": 30303
        },
        {
          "hostPort": 30303,
          "containerPort": 30303,
          "protocol": "udp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "qsp-network-geth",
          "containerPath": "/myapp/qspdata/geth"
        },
        {
          "sourceVolume": "qsp-network-keystore",
          "containerPath": "/myapp/qspdata/keystore",
        },
        {
          "sourceVolume": "qsp-network-geth-config",
          "containerPath": "/myapp/qspdata/geth-config",
          "readOnly": true
        }
      ]
    }
  ]
}
